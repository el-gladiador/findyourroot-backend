rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to get user document
    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }
    
    // Helper function to check user role
    function hasRole(role) {
      return isAuthenticated() && getUserData().role == role;
    }
    
    // Helper function to check if user is admin
    function isAdmin() {
      return hasRole('admin');
    }
    
    // Helper function to check if user is editor or admin
    function isEditorOrAdmin() {
      return hasRole('editor') || hasRole('admin');
    }
    
    // Users collection
    // - Users can only read their own document
    // - Only the backend should write to users (via Admin SDK which bypasses rules)
    match /users/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if false; // Only backend/Admin SDK can write
    }
    
    // People collection (family tree members)
    // - Any authenticated user can read
    // - Editors can create new people
    // - Editors can only update/delete people they created
    // - Admins can update/delete any person
    match /people/{personId} {
      // Any authenticated user can read
      allow read: if isAuthenticated();
      
      // Editors and admins can create
      allow create: if isEditorOrAdmin();
      
      // Update rules:
      // - Admin can update any
      // - Editor can only update if they created it
      allow update: if isAdmin() || 
                       (isEditorOrAdmin() && resource.data.created_by == request.auth.uid);
      
      // Delete rules:
      // - Admin can delete any
      // - Editor can only delete if they created it
      allow delete: if isAdmin() || 
                       (isEditorOrAdmin() && resource.data.created_by == request.auth.uid);
    }
    
    // Permission requests collection
    // - Users can read their own requests
    // - Users can create requests
    // - Only admins can read all and update requests
    match /permission_requests/{requestId} {
      allow read: if isAuthenticated() && 
                    (resource.data.user_id == request.auth.uid || isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Identity claims collection
    // - Users can read their own claims
    // - Users can create claims (to link their profile to a tree node)
    // - Only admins can read all and update/delete claims
    match /identity_claims/{claimId} {
      allow read: if isAuthenticated() && 
                    (resource.data.user_id == request.auth.uid || isAdmin());
      allow create: if isAuthenticated();
      allow update: if isAdmin();
      allow delete: if isAdmin();
    }
    
    // Deny access to any other collections by default
    match /{document=**} {
      allow read, write: if false;
    }
  }
}
